{
  "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        // used to reference shared types (outside of base directory)
        "@shared/*": ["../shared/*"]
      },

      // skips lib check for test files
      // test files run into build issues due to vitest import.
      // they aren't used after being compiled, so this is safe
      "skipLibCheck": true
  },
  // lets ts know where to look for files
  // note: files not included will not be compiled, nor will they be able to use aliases

  // shared is not imported here, as it is imported in individual files as needed
  "include": ["./src", "./test"],
  
  "exclude": ["../shared/vitest.config.ts", "../shared/**/*.test.ts", "../shared/**/vitestSetup.ts"], // exclude shared's vitest config to avoid build issues
  "compileOnSave": true,
}